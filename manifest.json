{
    "manifest_version": 3,
    "name": "Delux TTS",
    "description": "The most luxurious text to speech addition available",

    "version": "1.0.7",
    "author": "DeluxerPanda",
    "icons":{
		"128": "icon_128.png"
	},
    "action":{
        "default_icon":"icon.png",
        "default_popup":"popup.html"
    },
    "background":{
        "service_worker":"background.js"
    },
    "permissions":[
	"contextMenus",
	"notifications",
	"storage",
	"background"
	]
}